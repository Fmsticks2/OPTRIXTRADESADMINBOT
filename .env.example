# OPTRIXTRADES Bot Environment Variables
# Copy this file to .env and fill in your actual values for local development

# Bot Configuration (Required)
BOT_TOKEN=your_bot_token_here
BROKER_LINK=your_broker_affiliate_link_here
PREMIUM_CHANNEL_ID=your_channel_id_here
ADMIN_USERNAME=your_admin_username
ADMIN_USER_ID=your_telegram_user_id

# Webhook Configuration (for Railway deployment)
WEBHOOK_URL=https://your-railway-app.railway.app/webhook
BOT_MODE=webhook
WEBHOOK_PORT=8080

# Database Configuration
DATABASE_TYPE=sqlite
DATABASE_PATH=trading_bot.db

# For PostgreSQL (Railway)
# DATABASE_TYPE=postgresql
# DATABASE_URL=your_postgresql_connection_string

# Development Settings
DEBUG_MODE=false
TEST_MODE=false
VALIDATE_CONFIG=true

# Optional Settings
LOG_LEVEL=INFO
FOLLOW_UP_ENABLED=true
AUTO_VERIFY_ENABLED=true
RATE_LIMIT_ENABLED=true